<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Athena" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <!-- Collapsing toolbar style -->
    <style name="Theme.Athena.ToolbarCollapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Athena.ToolbarExpanded" parent="Theme.Athena.ToolbarCollapsed">
        <item name="android:textSize">36sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
</resources>